    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example core",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=lttest"
                ],
                "filter": {
                    "name": "lttest",
                    //"kind": "lib"
                }
            },           
            //starting in the 'example' folder, output is in the parent's 'test' folder
            "program": "${workspaceFolder}/../../../../../BuildTesting/RetroarchPi/RetroArch/retroarch",
            "args": ["--verbose", "-L", "./target/debug/liblttest.so", "Maze.ch8"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Retroarch 1.9.0",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=drsretroarch"
                ],
                "filter": {
                    "name": "drsretroarch",
                    "kind": "lib"
                }
            },           
            //starting in the 'example' folder, output is in the parent's 'test' folder
            "program": "${workspaceFolder}/../../../Engine/1.9.0/RetroArch/retroarch.exe",
            "args": ["--verbose", "-L", "./target/debug/drsretroarch.dll", "../../CaveStory/Doukutsu.exe"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Retroarch_Angle (openglES)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=drsretroarch"
                ],
                "filter": {
                    "name": "drsretroarch",
                    "kind": "lib"
                }
            },           
            //starting in the 'example' folder, output is in the parent's 'test' folder
            "program": "${workspaceFolder}/../../../Engine/1.9.0/RetroArch/retroarch_angle.exe",
            "args": ["--verbose", "-L", "./target/debug/drsretroarch.dll", "../../CaveStory/Doukutsu.exe"],
            "cwd": "${workspaceFolder}"
        }
    ]
}