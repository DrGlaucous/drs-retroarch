    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example core",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=libretro-rs"
                ],
                "filter": {
                    "name": "libretro-rs",
                    "kind": "lib"
                }
            },           
            //starting in the 'example' folder, output is in the parent's 'test' folder
            "program": "${workspaceFolder}/../../../Engine/RetroArch-Win64/retroarch.exe",
            "args": ["--verbose", "-L", "./target/debug/drsretroarch.dll", "Maze.ch8"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/<executable file>",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}